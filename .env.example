# Server configuration
# Port for the Express server (default: 5000)
PORT=5000

# Database configuration
# PostgreSQL connection string (replace user, password, host, port, and database with your values)
DATABASE_URL=postgres://user:password@localhost:5432/database

# Google Earth Engine credentials
# JSON key for GEE service account (replace with your service account key)
GEE_PRIVATE_KEY='{"client_email":"your-email@project.iam.gserviceaccount.com","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}'

# JWT secret for authentication
# Secret key for signing JWT tokens (replace with a secure random string, e.g., 32+ characters)
JWT_SECRET=your_jwt_secret_here

# Grok API configuration (placeholders for mock or real API)
# URL for the Grok API (replace with actual API endpoint when available)
GROK_API_URL=https://api.grok.mock
# API key for the Grok API (replace with actual key when available)
GROK_API_KEY=your_grok_api_key_here